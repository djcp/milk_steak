<div class="image-wrapper">
  <div class="<%= dom_class(image) %> <%= featured_image_class(image) %> thumbnail" id="<%= dom_id(image) %>">
    <% if image.image.attached? %>
      <%= link_to(image_tag(image.image_url(:thumb)), "#openModal#{image.id}")%>
    <% end %>
  </div>
  <div id="openModal<%= image.id %>" class="modalDialog">
    <div>
      <a href="#close" title="Close" class="close">X</a>
      <% if image.image.attached? %>
        <%= image_tag(image.image_url(:large)) %>
      <% end %>
      <% if image.caption? %>
        <div class="caption">
          <%= image.caption %>
        </div>
      <% end %>
    </div>
  </div>
</div>
