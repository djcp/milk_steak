<div id="flash">
  <% flash.each do |key, value| -%>
    <% flash_classes = {
      'alert' => 'bg-amber-50 text-amber-900 border-amber-200',
      'error' => 'bg-red-50 text-red-900 border-red-200',
      'notice' => 'bg-blue-50 text-blue-900 border-blue-200',
      'success' => 'bg-emerald-50 text-emerald-900 border-emerald-200'
    } %>
    <div class="px-6 py-3 border-b text-sm font-medium <%= flash_classes[key] || 'bg-gray-50 text-gray-900 border-gray-200' %>"><%= value %></div>
  <% end -%>
</div>
